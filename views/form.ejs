<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="./assets/footerstyle.css">

	<title>Event One</title>
</head>

<%- include('header.ejs') -%>

<main class="container-fluid p-3">
    <div class="card mb-3 p-5">
            <form>
                    <div class="form-group">
                        <label for="selectCategory" class="col-sm-2 col-form-label">What's the category</label>
                        <select class="form-control col-sm-10" id="topicSelect">
                            <option>Festivities</option>
                            <option>Adventure</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputName" placeholder="Give it a cool name">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Details</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            <!-- <input type="text" class="form-control" id="inputDetails" rows="4" placeholder="Write more about it"> -->
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">When</label>
                        <div class="col-sm-10">
                            <input type="datetime" class="form-control" id="datetime" placeholder="When is it?">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputPassword3" class="col-sm-2 col-form-label">Where</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="location" placeholder="Where is the event ?">
                        </div>
                    </div>
                    
                    
                    <div class="form-group row">
                      <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                      </div>
                    </div>
                  </form>
    </div>
</main>

<%- include ('footer.ejs') -%>
</html>