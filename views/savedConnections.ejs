<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="./assets/footerstyle.css">

	<title>My Events</title>
</head>

<%- include ('header.ejs') -%>

<main>
	<div class="container p-5">
		<h2>My Events</h2>
		
		<table class="table table-bordered table-hover ">
			<thead class="thead-dark">
				<tr>
					<th scope="col">#</th>
					<th scope="col">Event</th>
					<th scope="col">Category</th>
					<th scope="col">Going?</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				
				<% for (var i = 0; i < datap.events.length; i++ ) {%>
				<tr>
					<th scope="row">1</th>
					<td><%= datap.events[i].event.title %></td>
					<td><%= datap.events[i].event.topic %></td>
					<td><%= datap.events[i].rsvp %></td>
					<td><a class="btn btn-light btn-outline-dark" href="/user/updateEvent?id=<%= datap.events[i].event.id%>" role="button">Update</a>
						<a class="btn btn-light btn-outline-dark" href="/user/delEvent?id=<%= datap.events[i].event.id%>" role="button">Delete</a></td>
				</tr>
				<%}%>
				
			</tbody>
		</table>
		
	</div>
</main>

<%- include ('footer.ejs') -%>
</html>